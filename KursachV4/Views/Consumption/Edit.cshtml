@model KursachV4.Consumption

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Consumption</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.ReceiverId, "Receiver")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Назва фірми", String.Empty)
            @Html.ValidationMessageFor(model => model.ReceiverId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ScrapId, "Scrap")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Назва металу", String.Empty)
            @Html.ValidationMessageFor(model => model.ScrapId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ArravingDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ArravingDate)
            @Html.ValidationMessageFor(model => model.ArravingDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Cost)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Cost)
            @Html.ValidationMessageFor(model => model.Cost)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Amount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Amount)
            @Html.ValidationMessageFor(model => model.Amount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StoreId, "Store")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Назва складу", String.Empty)
            @Html.ValidationMessageFor(model => model.StoreId)
        </div>

        <p>
            <input type="submit" class="waves-effect waves-light btn-large add-metal" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
